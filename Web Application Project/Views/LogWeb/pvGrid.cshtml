<table class="table table-responsive table-sm psd-table">
    <thead>
        <tr>
            <th>
                Ações
            </th>
            <th>
                Código
            </th>
            <th>
                Mensagem ( Resumo )
            </th>
            <th>
                Tipo de Log
            </th>
            <th>
                Data de Geração
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>
                    <a href="LogWeb/Edit?id=@log.Id" class="btn psd-button psd-button-info">Ver Detalhes</a>
                </td>
                <td>
                    @log.Id
                </td>
                <td>
                    @if (log.Mensagem.Length > 20)
                    {
                        @log.Mensagem.Substring(0, 20)
                    }
                    else
                    {
                        @log.Mensagem
                    }
                </td>
                <td>
                    @(((EnumTipoLog)log.TipoOperacao).ToString())
                </td>
                <td>
                    @log.DataGeracao.ToString("dd/MM/yyyy - HH:mm:ss")
                </td>
            </tr>
        }
    </tbody>
</table>