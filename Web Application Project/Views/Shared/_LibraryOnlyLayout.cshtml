<!DOCTYPE html>

@{
    var dadosUsuario = ViewBag.Usuario;
    var usuarioLogado = dadosUsuario != null;
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Application.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/limonte-sweetalert2/sweetalert2.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/comuns.css" asp-append-version="true" />
</head>
<body style="background-color: #009879">
    <div class="container" style="max-width: 100%; padding-right: 0; padding-left: 0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--Libs-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>

    <!--Project Scripts-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
